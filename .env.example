# Environment Variables for POS System Docker Compose
# ======================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================================
# PostgreSQL Database
# ============================================================================
POSTGRES_PASSWORD=pos_password_dev

# ============================================================================
# Google Cloud Platform
# ============================================================================
# Path to your GCP service account JSON key file
GOOGLE_CREDENTIALS_PATH=./credentials
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-key.json

# Project ID for GCP services
VERTEX_PROJECT_ID=your-gcp-project-id
DOCUMENTAI_PROJECT_ID=your-gcp-project-id

# GCS Bucket for image storage
GCS_BUCKET_NAME=pos-images-dev

# Vertex AI Translation API
VERTEX_LOCATION=us-central1

# Document AI (OCR)
DOCUMENTAI_LOCATION=us
DOCUMENTAI_PROCESSOR_ID=your-processor-id

# ============================================================================
# JWT Authentication (Module 6)
# ============================================================================
# CRITICAL: Change this in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# ============================================================================
# NTAK Integration (Module 8)
# ============================================================================
# Hungarian Tax Authority (NAV) NTAK API
NTAK_API_URL=https://ntak-test.nav.gov.hu
NTAK_API_KEY=your-ntak-api-key
NTAK_MERCHANT_ID=your-ntak-merchant-id

# ============================================================================
# Development vs Production
# ============================================================================
# Set to 'production' in production environment
ENVIRONMENT=development
