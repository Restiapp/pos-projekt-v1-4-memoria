# Service Port
# Port on which the service_admin microservice will run
PORT=8008

# =====================================
# NTAK Configuration
# =====================================
# Enable/disable NTAK reporting functionality
NTAK_ENABLED=true

# NTAK API endpoint URL
# Use test environment for development: https://ntak-test.gov.hu/api/v1
# Production: https://ntak.gov.hu/api/v1
NTAK_API_URL=https://ntak-test.gov.hu/api/v1

# NTAK API authentication key (obtain from NTAK portal)
NTAK_API_KEY=your_ntak_api_key_here

# NTAK registered restaurant identifier
NTAK_RESTAURANT_ID=REST12345

# Restaurant tax identification number (adószám)
NTAK_TAX_NUMBER=12345678-1-23

# NTAK reporting interval in seconds (default: 3600 = 1 hour)
NTAK_REPORT_INTERVAL=3600

# =====================================
# Inter-Service Communication URLs
# =====================================
# Orders Service URL for fetching order data
ORDERS_SERVICE_URL=http://localhost:8002

# Menu Service URL for product information
MENU_SERVICE_URL=http://localhost:8001

# Inventory Service URL for stock data
INVENTORY_SERVICE_URL=http://localhost:8003

# =====================================
# Database Configuration (Optional)
# =====================================
# PostgreSQL connection string for admin data storage
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://pos_user:your_password@localhost:5432/pos_db

# =====================================
# Admin Service Settings
# =====================================
# Admin session timeout in seconds (default: 3600 = 1 hour)
ADMIN_SESSION_TIMEOUT=3600

# Minimum password length for admin users
ADMIN_PASSWORD_MIN_LENGTH=8

# =====================================
# JWT Authentication Configuration (Module 6 - RBAC)
# =====================================
# Secret key for JWT token signing
# IMPORTANT: Generate a strong random string (min 32 characters)
# Example generation: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secret_jwt_key_min_32_chars_change_this_in_production

# JWT signing algorithm (HS256, HS384, HS512)
JWT_ALGORITHM=HS256

# JWT access token expiration time in minutes (default: 60 = 1 hour)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# =====================================
# PIN Code Configuration (Module 6 - RBAC)
# =====================================
# Minimum PIN code length for employee authentication
PIN_CODE_MIN_LENGTH=4

# Maximum PIN code length for employee authentication
PIN_CODE_MAX_LENGTH=6

# =====================================
# Logging Configuration
# =====================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
