# Database Configuration
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://pos_user:your_password@localhost:5432/pos_db

# Service Port
# Port on which the service_logistics microservice will run
PORT=8005

# Orders Service URL
# URL of the Orders Service for delivery assignment
ORDERS_SERVICE_URL=http://localhost:8002

# Admin Service URL
# URL of the Admin Service for authentication and RBAC
ADMIN_SERVICE_URL=http://localhost:8008

# Logistics Configuration
# Default delivery time in minutes
DEFAULT_DELIVERY_TIME_MINUTES=30

# Maximum delivery distance in kilometers
MAX_DELIVERY_DISTANCE_KM=10.0
