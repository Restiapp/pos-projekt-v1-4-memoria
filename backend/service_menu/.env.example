# Database Configuration
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://pos_user:your_password@localhost:5432/pos_db

# Google Cloud Storage Configuration
# Bucket name for storing product images
GCS_BUCKET_NAME=pos-product-images

# Google Cloud Project Configuration
# Your GCP project ID
GCP_PROJECT_ID=your-gcp-project-id

# Vertex AI Configuration
# Region for Vertex AI Translation API (e.g., us-central1, europe-west1)
VERTEX_AI_LOCATION=europe-west1

# Service Port
# Port on which the service_menu microservice will run
PORT=8001
